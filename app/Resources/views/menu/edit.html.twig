{% extends "Layout/base_admin/_admin_base.html.twig" %}

{% block title_page %}
        EMR || Backend Medic
{% endblock %}

{% block breadcrumb %}
    {{ include('menu/_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('menu/_submenu.html.twig' )  }}
{% endblock %}

{% block body %}
    <h1>Menu edit</h1>
    <div class="row">
        <div class="col-lg-6">
            
            <!-- Check the notifications -->
            <div id="holder_msg">
                {% for message in app.session.flashbag().get("success") %}
                    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{message}}</div>
                {% endfor %}
                {% for message in app.session.flashbag().get("error") %}
                    <div class="alert alert-danger"><i class="fa fa-close"></i> {{message}}</div>
                {% endfor %}
            </div>
            <!-- End notifications -->
            
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
            {{ form_end(edit_form) }}
            <hr>
        </div>
    </div>
    <ul class="list-inline">
        
        <li>
            <a href="{{ path('menu_index') }}" class="btn btn-info"><i class="fa fa-list"></i> List</a>
        </li>
        <li>
            <a href="{{ path('menu_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> New</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
            {{ form_end(delete_form) }}
        </li>
        
    </ul>
    {{ include ('./menu/list_icons.html.twig') }}        
{% endblock %}
