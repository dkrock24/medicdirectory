{% extends "Layout/base_admin/_admin_base.html.twig" %}

{% block title_page %}
        EMR || Editar Contacto
{% endblock %}

{% block breadcrumb %}
    {{ include('AdminBundle:contactanos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AdminBundle:contactanos:_submenu.html.twig' )  }}
{% endblock %}

{% block body %}
    <h1>Editar Contactanos</h1>
    <div class="row">
        <div class="col-lg-6">

        <!-- Check the notifications -->
            {% for message in app.session.flashbag().get("success") %}
                <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{message}}</div>
            {% endfor %}
            {% for message in app.session.flashbag().get("error") %}
                <div class="alert alert-danger"><i class="fa fa-close"></i> {{message}}</div>
            {% endfor %}
        <!-- End notifications -->

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <button type="submit" value="Edit"  class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
    {{ form_end(edit_form) }}

    <hr>
        </div>
    </div>

    <ul class="list-inline">
        <li>
            <a href="{{ path('contactanos_index') }}"  class="btn btn-info"><i class="fa fa-list"></i> Listar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button type="submit" value="Delete" class="btn btn-danger"><i class="fa fa-remove"></i> Eliminar</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
