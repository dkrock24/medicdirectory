{% extends "Layout/base_admin/_admin_base.html.twig" %}

{% block title_page %}
        EMR || Formulario para crear una nueva seccion de modulo
{% endblock %}

{% block breadcrumb %}
    {{ include('AdminBundle:secciones_modulos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AdminBundle:secciones_modulos:_submenu.html.twig' )  }}
{% endblock %}

{% block body %}
    <h1>Nueva seccion de modulo</h1>
    <div class="row">
        <div class="col-lg-6">
            <!-- Check the notifications -->
            {% for message in app.session.flashbag().get("success") %}
                <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{message}}</div>
            {% endfor %}
            {% for message in app.session.flashbag().get("error") %}
                <div class="alert alert-danger"><i class="fa fa-close"></i> {{message}}</div>
            {% endfor %}
            <!-- End notifications -->
            
            {{ form_start(form) }}
                {{ form_row( form.modSeccSeccion ) }}
                {{ form_row( form.modSeccModId ) }}
                {{ form_row( form.modSeccOrden ) }}
                {{ form_row( form.modSeccActivo ) }}
                <br>
                <button type="submit" class="btn btn-success"><i class="icon-newspaper"></i> Crear</button>
                {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
            <hr>
        </div>
    </div>
    <ul class="list-inline">
        <li>
            <a href="{{ path('secciones_modulos_index') }}" class="btn btn-info"><i class="fa fa-list"></i> Listar</a>
        </li>
    </ul>
{% endblock %}