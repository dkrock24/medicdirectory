<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SysUnidadMedida" table="sys_unidad_medida">
    <indexes>
      <index name="FK_sys_unidad_medida_sys_categoria_unidad_medida" columns="id_categoria_unidad_medida"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombreUnidad" type="string" column="nombre_unidad" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="fechaCreacion" type="datetime" column="fecha_creacion" nullable="true"/>
    <many-to-one field="idCategoriaUnidadMedida" target-entity="SysCategoriaUnidadMedida" fetch="LAZY">
      <join-columns>
        <join-column name="id_categoria_unidad_medida" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
