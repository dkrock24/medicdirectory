{% extends '_admin_base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:syssugerencias:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:syssugerencias:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Sugerencias</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sysSugerencia.id }}</td>
            </tr>
            <tr>
                <th>Comentario</th>
                <td>{{ sysSugerencia.comentarioSysSugerencia }}</td>
            </tr>
            
            <tr>
                <th>Area</th>
                <td>{{ sysSugerencia.sysArea }}</td>
            </tr>
            <tr>
                <th>Institucion</th>
                <td>{{ sysSugerencia.sysInstitucion }}</td>
            </tr>
            <tr>
                <th>Fecha Creacion</th>
                <td>{% if sysSugerencia.fechaCreacionSysSugerencia %}{{ sysSugerencia.fechaCreacionSysSugerencia|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estatussugerencia</th>
                <td>{% if sysSugerencia.estatusSugerencia %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
 <hr>
</div>
</div>
<ul class="btn-option-emr">
        <li>
            <a href="{{ path('syssugerencias_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('syssugerencias_edit', { 'id': sysSugerencia.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('syssugerencias_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
    </ul>
{% endblock %}
