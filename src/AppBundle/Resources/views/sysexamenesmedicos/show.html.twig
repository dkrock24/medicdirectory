{% extends '_admin_base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:sysexamenesmedicos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysexamenesmedicos:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Examenes Medicos</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}

    <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sysExamenesMedico.id }}</td>
            </tr>
            <tr>
                <th>Nombre Examen</th>
                <td>{{ sysExamenesMedico.nombreExamen }}</td>
            </tr>
            <tr>
                <th>Tipo Examen</th>
                <td>{{ sysExamenesMedico.tipoExamen }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ sysExamenesMedico.estadoExamen }}</td>
            </tr>
            <tr>
                <th>Fecha Creacion</th>
                <td>{% if sysExamenesMedico.fechaCreacion %}{{ sysExamenesMedico.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <hr>
</div>
</div>

    <ul class="btn-option-emr">
        <li>
            <a href="{{ path('sysexamenesmedicos_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('sysexamenesmedicos_edit', { 'id': sysExamenesMedico.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('sysexamenesmedicos_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
    </ul>
{% endblock %}
