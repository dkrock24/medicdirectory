                                    </li>
                                    <li>
                                        <a href="{{ path('sysroles_edit', { 'id': sysRole.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
                                    </li>
                                </ul>    
