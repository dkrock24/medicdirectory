{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:sysperiodosmedico:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysperiodosmedico:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Edit Periodos Medico</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
    {{ form_start(edit_form) }}

        <div class="form_error">{{ form_errors(edit_form)}}</div>

            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.sysUsuario)}}</div>
                <div><label for="">Usuario</label></div>
                {{ form_widget(edit_form.sysUsuario) }}
            </div>

            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.fechaContratoInico)}}</div>
                <div><label for="">Fecha Inicio</label></div>
                {{ form_widget(edit_form.fechaContratoInico) }}
            </div>

            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.fechaContratoFin)}}</div>
                <div><label for="">Fecha Fin</label></div>
                {{ form_widget(edit_form.fechaContratoFin) }}
            </div>

            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.montoSysPeriodosMedico)}}</div>
                <div><label for="">Costo</label></div>
                {{ form_widget(edit_form.montoSysPeriodosMedico) }}
            </div>
      
         <input type="submit" value="Editar" class="btn btn-info" />
    {{ form_end(edit_form) }}
</div>
    </div>
        <hr>
    <ul class="btn-option-emr">
        <li>
            <a href="{{ path('sysperiodosmedico_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
         <li>
            <a href="{{ path('sysperiodosmedico_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
    </ul>
{% endblock %}
