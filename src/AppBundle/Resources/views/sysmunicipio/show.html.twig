{% extends "::_admin_base.html.twig" %}

{% block breadcrumb %}
    {{ include('AppBundle:sysdepartamentos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysdepartamentos:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Municipio</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            

            
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ sysMunicipio.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombres</th>
                        <td>{{ sysMunicipio.nombreSysMunicipo }}</td>
                    </tr>
                    <tr>
                        <th>Descripcion</th>
                        <td>{{ sysMunicipio.descripcionSysMunicipio }}</td>
                    </tr>
                    <tr>
                        <th>Departamento</th>
                        <td>{{ sysMunicipio.sysDepartamentos }}</td>
                    </tr>
                    <tr>
                        <th>Pais</th>
                        <td>{{ sysMunicipio.sysDepartamentos.pais }}</td>
                    </tr>
                    <tr>
                        <th>Estatus</th>
                        <td>{% if  sysMunicipio.estatusSysMunicipo  %}<span class="label label-success">Activo</span>{% else %}<span class="label label-danger">Inactivo</span>{% endif %}</td>
                    </tr>
                </tbody>
            </table>
                    
            <hr>
            <ul class="btn-option-emr">
                <li>
                    <a href="{{path('sysmunicipio_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
                </li>
                <li>
                    <a href="{{ path('sysmunicipio_edit', { 'id': sysMunicipio.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Eliminar" class="btn btn-danger">
                    {{ form_end(delete_form) }}
                </li>
                <li>
                    <a href="{{ path('sysmunicipio_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
                </li>
            </ul>    

        </div>
    </div>
{% endblock %}

{% block codejs %}
    <script>
        $(function(){

          });
    </script>
{% endblock %} 