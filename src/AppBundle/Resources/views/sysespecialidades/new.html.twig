{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:sysespecialidades:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysespecialidades:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Nueva Especialidad</h1>

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="panel-bodyx">
            {{ form_start(form) }}
                {# {{ form_widget(form) }} #}

                <div class="form-group">                    
                    <div class="form_error">{{ form_errors(form.categoriaSysEspecialidad)}}</div>
                    <div><label for="">Categoria</label></div>
                    {{ form_widget(form.categoriaSysEspecialidad) }}
                </div>

                <div class="form-group">                    
                    <div class="form_error">{{ form_errors(form.nombreSysEspecialidades)}}</div>
                    <div><label for="">Nombre</label></div>
                    {{ form_widget(form.nombreSysEspecialidades) }}
                </div>

                <div class="form-group">                    
                    <div class="form_error">{{ form_errors(form.descripcionSysEspecialidades)}}</div>
                    <div><label for="">Descripcion</label></div>
                    {{ form_widget(form.descripcionSysEspecialidades) }}
                </div>

                <div class="form-group">                    
                    <div class="form_error">{{ form_errors(form.codigoSysEspecialidades)}}</div>
                    <div><label for="">Codigo</label></div>
                    {{ form_widget(form.codigoSysEspecialidades) }}
                </div>

                <div class="form-group">
                    <div class="form_error">{{ form_errors(form.estatusSysEspecialidad)}}</div>
                    <div>Estatus</div>
                    <div class="checkbox">
                        <label>
                            {{ form_widget(form.estatusSysEspecialidad) }}
                            <span class="text"></span>
                        </label>
                    </div>   
                </div>

                <input type="submit" value="Crear" class="btn btn-primary"  />
            {{ form_end(form) }}
            </div>
        </div>      
    </div>

    {#
    <ul>
        <li>
            <a href="{{ path('sysespecialidades_index') }}">Back to the list</a>
        </li>
    </ul>
    #}
{% endblock %}
