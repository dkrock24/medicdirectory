{% extends '_admin_base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:sysespecialidades:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysespecialidades:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Especialidad</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sysEspecialidade.id }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ sysEspecialidade.categoriaSysEspecialidad }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ sysEspecialidade.nombreSysEspecialidades }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ sysEspecialidade.descripcionSysEspecialidades }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ sysEspecialidade.codigoSysEspecialidades }}</td>
            </tr>
            <tr>
                <th>Estatus</th>
                <td>{% if sysEspecialidade.estatusSysEspecialidad %}<span class="label label-success">Activo</span>{% else %}<span class="label label-danger">Inactivo</span>{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <hr>
</div>
</div>

    <ul class="btn-option-emr">
        <li>
            <a href="{{ path('sysespecialidades_index') }}" class="btn btn-default">Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('sysespecialidades_edit', { 'id': sysEspecialidade.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
        </li>
        <li>
           {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('sysespecialidades_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
    </ul>
{% endblock %}
