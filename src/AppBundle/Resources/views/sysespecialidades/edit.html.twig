{% extends '_admin_base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:sysespecialidades:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysespecialidades:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Especialidad Editar</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">

    {{ form_start(edit_form) }}
         {# {{ form_widget(edit_form) }} #}

         <div class="form-group">                    
                    <div class="form_error">{{ form_errors(edit_form.categoriaSysEspecialidad)}}</div>
                    <div><label for="">Categoria</label></div>
                    {{ form_widget(edit_form.categoriaSysEspecialidad) }}
                </div>

                <div class="form-group">                    
                    <div class="form_error">{{ form_errors(edit_form.nombreSysEspecialidades)}}</div>
                    <div><label for="">Nombre</label></div>
                    {{ form_widget(edit_form.nombreSysEspecialidades) }}
                </div>

                <div class="form-group">                    
                    <div class="form_error">{{ form_errors(edit_form.descripcionSysEspecialidades)}}</div>
                    <div><label for="">Descripcion</label></div>
                    {{ form_widget(edit_form.descripcionSysEspecialidades) }}
                </div>

                <div class="form-group">                    
                    <div class="form_error">{{ form_errors(edit_form.codigoSysEspecialidades)}}</div>
                    <div><label for="">Codigo</label></div>
                    {{ form_widget(edit_form.codigoSysEspecialidades) }}
                </div>

                <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.estatusSysEspecialidad)}}</div>
                    <div>Estatus</div>
                    <div class="checkbox">
                        <label>
                            {{ form_widget(edit_form.estatusSysEspecialidad) }}
                            <span class="text"></span>
                        </label>
                    </div>   
                </div>



        <input type="submit" value="Guardar" class="btn btn-info" />
    {{ form_end(edit_form) }}
</div>
    </div>
        <hr>
    <ul class="btn-option-emr">
        <li>
            <a href="{{ path('sysespecialidades_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('sysespecialidades_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
    </ul>
{% endblock %}
