{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:syspais:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:syspais:_submenu.html.twig' )  }}
{% endblock %}

{% block body %}
    <h1>Edición de país</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
        {{ form_start(edit_form) }}
            {# {{ form_widget(edit_form) }} #}

            <div class="form_error">{{ form_errors(edit_form)}}</div>
            <div class="form-group">

                <div class="form_error">{{ form_errors(edit_form.nombreSysPais)}}</div>
                <div><label for="">Pais</label></div>
                {{ form_widget(edit_form.nombreSysPais) }}
            </div>
            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.prefijoSysPais)}}</div>
                <div><label for="" class="">Prefijo</label></div>
                {{ form_widget(edit_form.prefijoSysPais) }}
            </div>
            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.codigoPostalSysPais)}}</div>
                <label for="" class=" control-label">Código postal</label>
                {{ form_widget(edit_form.codigoPostalSysPais) }}
            </div>
            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.continentePaisSysPais)}}</div>
                <label for="" class=" control-label">Continente</label>
                {{ form_widget(edit_form.continentePaisSysPais) }}
            </div>
            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.estatusSysPais)}}</div>
                <div>Estatus</div>
                <div class="checkbox">
                    <label>
                        {{ form_widget(edit_form.estatusSysPais) }}
                        <span class="text"></span>
                    </label>
                </div>   
            </div>

            <input type="submit" value="Editar" class="btn btn-info" />
        {{ form_end(edit_form) }}
        </div>
    </div>
        <hr>
    <ul class="btn-option-emr">
        
        
        <li>
            <a href="{{ path('syspais_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('syspais_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
        
    </ul>
{% endblock %}
