{% extends "::base.html.twig" %}

{% block breadcrumb %}
    {{ include('AppBundle:sysdepartamentos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysdepartamentos:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1>Lista de Departamentos</h1>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombres</th>
                        <th>Código zona</th>
                        <th>Descripcion</th>
                        <th>Prefijo</th>
                        <th>País</th>
                        <th>Estatus</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for sysDepartamento in sysDepartamentos %}
                        <tr>
                            <td><a href="{{ path('sysdepartamentos_show', { 'id': sysDepartamento.id }) }}">{{ sysDepartamento.id }}</a></td>
                            <td>{{ sysDepartamento.nombreSysDepartamento }}</td>
                            <td>{{ sysDepartamento.codigoZonaSysDepartamento }}</td>
                            <td>{{ sysDepartamento.descripcionSysDepartamento }}</td>
                            <td>{{ sysDepartamento.prefijoSysDepartamento }}</td>
                            <td>{{ sysDepartamento.pais }}</td>
                            <td>{% if sysDepartamento.estatusSysDepartamento %}<span class="label label-success">Activo</span>{% else %}<span class="label label-danger">Inactivo</span>{% endif %}</td>
                            <td>
                                <ul class="btn-option-emr">
                                    <li>
                                        <a href="{{ path('sysdepartamentos_show', { 'id': sysDepartamento.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-eye-open"></i> Ver</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('sysdepartamentos_edit', { 'id': sysDepartamento.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
                                    </li>
                                </ul>    
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {#    
            <ul>
                <li>
                    <a href="{{ path('sysdepartamentos_new') }}">Create a new entry</a>
                </li>
            </ul>
            #}    
        
        </div>
    </div>
{% endblock %}

