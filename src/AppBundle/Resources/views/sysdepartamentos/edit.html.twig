{% extends "::_admin_base.html.twig" %}

{% block breadcrumb %}
    {{ include('AppBundle:sysdepartamentos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysdepartamentos:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    
    <h1>Edición de Departamento</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            
            {#
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input type="submit" value="Edit" />
            {{ form_end(edit_form) }}
            #}
            {{ form_start(edit_form) }}

                <div class="form_error">{{ form_errors(edit_form)}}</div>
                <div class="form-group">

                    <div class="form_error">{{ form_errors(edit_form.nombreSysDepartamento)}}</div>
                    <div><label for="">Departamento</label></div>
                    {{ form_widget(edit_form.nombreSysDepartamento) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.codigoZonaSysDepartamento)}}</div>
                    <div><label for="" class="">Código Zona</label></div>
                    {{ form_widget(edit_form.codigoZonaSysDepartamento) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.descripcionSysDepartamento)}}</div>
                    <label for="" class=" control-label">Descripción</label>
                    {{ form_widget(edit_form.descripcionSysDepartamento) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.prefijoSysDepartamento)}}</div>
                    <label for="" class=" control-label">Prefijo</label>
                    {{ form_widget(edit_form.prefijoSysDepartamento) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.pais)}}</div>
                    <label for="" class=" control-label">País</label>
                    {{ form_widget(edit_form.pais) }}
                </div>

                <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.estatusSysDepartamento)}}</div>
                    <div>Estatus</div>
                    <div class="checkbox">
                        <label>
                            {{ form_widget(edit_form.estatusSysDepartamento) }}
                            <span class="text"></span>
                        </label>
                    </div>   
                </div>

                <input type="submit" value="Editar" class="btn btn-info" />
            {{ form_end(edit_form) }}
            <hr>   
            <ul class="btn-option-emr">
                <li>
                    <a href="{{ path('sysdepartamentos_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Eliminar" class="btn btn-danger">
                    {{ form_end(delete_form) }}
                </li>
                <li>
                    <a href="{{ path('sysdepartamentos_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
                </li>

            </ul>     
        
        </div>
    </div>
{% endblock %}

