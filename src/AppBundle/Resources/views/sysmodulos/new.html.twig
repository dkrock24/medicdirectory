                <div class="form-group">
                    <div class="form_error">{{ form_errors(form.precioSysModulo)}}</div>
                    <label for="" class=" control-label">Precio</label>
                    {{ form_widget(form.precioSysModulo) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(form.codigoSysModulo)}}</div>
                    <label for="" class=" control-label">Codigo</label>
                    {{ form_widget(form.codigoSysModulo) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(form.imagenModulo)}}</div>
                    <label for="" class=" control-label">Imagen</label>
                    {{ form_widget(form.imagenModulo) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(form.estatusSysModulo)}}</div>
                    <div>Estatus</div>
                    <div class="checkbox">
                            <label>
                                {{ form_widget(form.estatusSysModulo) }}
                                <span class="text"></span>
                            </label>
                    </div>   
                </div>
            
                                
                <input type="submit" value="Crear" class="btn btn-primary" />
            {{ form_end(form) }}

                        
