                <div class="form-group">
                    
                    <div class="form_error">{{ form_errors(form.nombreSysModulo)}}</div>
                    <div><label for="">Nombre</label></div>
                    {{ form_widget(form.nombreSysModulo) }}
                </div>
                <div class="form-group">
                    <div class="form_error">{{ form_errors(form.descripcionSysModulo)}}</div>
                    <div><label for="" class="">Descripcion</label></div>
                    {{ form_widget(form.descripcionSysModulo) }}
