{% extends '_admin_base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:sysmodulos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysmodulos:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Modulos</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sysModulo.id }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ sysModulo.nombreSysModulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ sysModulo.descripcionSysModulo }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ sysModulo.precioSysModulo }}</td>
            </tr>
            <tr>
                <th>Estatus</th>
                <td>{% if sysModulo.estatusSysModulo %}<span class="label label-success">Activo</span>{% else %}<span class="label label-danger">Inactivo</span>{% endif %}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ sysModulo.codigoSysModulo }}</td>
            </tr>
            <tr>
                <th>Fecha Creacion</th>
                <td>{% if sysModulo.fechaCreacionSysModulo %}{{ sysModulo.fechaCreacionSysModulo|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Imagen Modulo</th>
                <td>
                    <img width="150px" src="{{ asset("uploads/"~sysModulo.imagenModulo)}}">
                </td>
            </tr>
        </tbody>
    </table>
    <hr>
</div>
</div>

<ul class="btn-option-emr">
        <li>
            <a href="{{ path('sysmodulos_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('sysmodulos_edit', { 'id': sysModulo.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
        </li>
        <li>
           {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('sysmodulos_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
    </ul>

{% endblock %}
