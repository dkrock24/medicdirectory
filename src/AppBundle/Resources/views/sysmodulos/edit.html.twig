{% extends '_admin_base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:sysmodulos:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:sysmodulos:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Edici√≥n de Modulo</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
        {{ form_start(edit_form , {'enctype':'multipart/form-data'}) }}
            {# {{ form_widget(edit_form) }} #}

            <div class="form_error">{{ form_errors(edit_form)}}</div>
            <div class="form-group">  
                          
                <div class="form_error">{{ form_errors(edit_form.nombreSysModulo)}}</div>
                <div><label for="">Nombre</label></div>
                {{ form_widget(edit_form.nombreSysModulo) }}
            </div>
            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.descripcionSysModulo)}}</div>
                <div><label for="" class="">Descripcion</label></div>
                {{ form_widget(edit_form.descripcionSysModulo) }}
            </div>
            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.precioSysModulo)}}</div>
                <label for="" class=" control-label">Precio</label>
                {{ form_widget(edit_form.precioSysModulo) }}
            </div>
            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.codigoSysModulo)}}</div>
                <label for="" class=" control-label">Codigo</label>
                {{ form_widget(edit_form.codigoSysModulo) }}
            </div>

            <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.imagenModulo)}}</div>
                    <label for="" class="control-label">Vista Previa</label>
                    <img width="150px" src="{{ asset("uploads/"~sysModulo.imagenModulo)}}">
                    
            </div>

            <div class="form-group">
                    <div class="form_error">{{ form_errors(edit_form.imagenModulo)}}</div>
                    <label for="" class="control-label">Imagen</label>
                    {{ form_widget(edit_form.imagenModulo) }}
            </div>

            <div class="form-group">
                <div class="form_error">{{ form_errors(edit_form.estatusSysModulo)}}</div>
                <div>Estatus</div>
                <div class="checkbox">
                    <label>
                        {{ form_widget(edit_form.estatusSysModulo) }}
                        <span class="text"></span>
                    </label>
                </div>   
            </div>

            <input type="submit" value="Guardar" class="btn btn-info" />
        {{ form_end(edit_form) }}
        </div>
    </div>
        <hr>
    <ul class="btn-option-emr">
        
        
        <li>
            <a href="{{ path('sysmodulos_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('sysmodulos_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
        
    </ul>
{% endblock %}
