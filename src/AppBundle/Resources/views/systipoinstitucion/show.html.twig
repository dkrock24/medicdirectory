{% extends '_admin_base.html.twig' %}

{% block breadcrumb %}
    {{ include('AppBundle:systipoinstitucion:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('AppBundle:systipoinstitucion:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Tipos de Instituciones</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-dismissible alert-success"><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-dismissible alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ flashMessage }}</div>
    {% endfor %}
    <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
            <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sysTipoInstitucion.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ sysTipoInstitucion.nombreTipoSysInstitucion }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ sysTipoInstitucion.descripcionSysTipoInstitucion }}</td>
            </tr>
            {#
            <tr>
                <th>Estadosystipoinstitucion</th>
                <td>{{ sysTipoInstitucion.estadoSysTipoInstitucion }}</td>
            </tr>
            #}
            <tr>
                <th>Código</th>
                <td>{{ sysTipoInstitucion.codigoSysTipoInstitucion }}</td>
            </tr>
            <tr>
                <th>Fecha creción</th>
                <td>{% if sysTipoInstitucion.fechaCrecionSysTipoInstitucion %}{{ sysTipoInstitucion.fechaCrecionSysTipoInstitucion|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
            <hr>
    </div>
    </div>
     <ul class="btn-option-emr">
        <li>
            <a href="{{ path('systipoinstitucion_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('systipoinstitucion_edit', { 'id': sysTipoInstitucion.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('systipoinstitucion_new')}}" class="btn btn-inverse"><i class="fa fa-plus"></i> Nuevo </a>
        </li>
    </ul>        
{% endblock %}
