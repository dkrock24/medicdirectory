<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SysCita" table="sys_cita">
    <indexes>
      <index name="fk_sys_cita_sys_usuario1_idx" columns="sys_usuario_medico"/>
      <index name="fk_sys_cita_sys_usuario2_idx" columns="sys_usuario_paciente"/>
      <index name="fk_sys_cita_sys_inst_tiene_area1_idx" columns="sys_inst_tiene_area_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="fechaCitaSysCita" type="datetime" column="fecha_cita_sys_cita" nullable="true"/>
    <field name="comentario" type="text" column="comentario" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="estatusCita" type="boolean" column="estatus_cita" nullable="false"/>
    <field name="fechaCita" type="datetime" column="fecha_cita" nullable="false"/>
    <many-to-one field="sysUsuarioPaciente" target-entity="SysUsuario" fetch="LAZY">
      <join-columns>
        <join-column name="sys_usuario_paciente" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="sysUsuarioMedico" target-entity="SysUsuario" fetch="LAZY">
      <join-columns>
        <join-column name="sys_usuario_medico" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="sysInstTieneArea" target-entity="SysInstTieneArea" fetch="LAZY">
      <join-columns>
        <join-column name="sys_inst_tiene_area_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
