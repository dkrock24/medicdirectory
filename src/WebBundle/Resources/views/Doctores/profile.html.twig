{% extends 'Layout/base_web/_web_base.html.twig' %}
{% block breadcrumb %}
    <!-- Breadcrumb Starts -->
    <div class="breadcrumb">
        <div class="container">
            <ul class="list-unstyled list-inline">
                <li><a href="index.html">Inicio</a></li>
                <li><a href="doctors.html">Doctores</a></li>
                <li class="active">Perfil</li>
            </ul>
        </div>
    </div>		
    <!-- Breadcrumb Ends -->
{% endblock %}

{%block body %}

    <!-- Doctor Profile Starts -->
    <div class="row">
        <div class="col-sm-5 col-xs-12">
            <div class="profile-block">
                <div class="panel panel-profile">
                    <div class="panel-heading">
                        <img src="{{ asset("bundles/web/images/doctors/doctor-bio-img6.jpg") }}" alt="Doctor Profile Image" class="img-responsive img-center-xs">
                        <h3 class="panel-title">{{ medico.usu_titulo}} {{ medico.usu_nombre|title }}</h3>
                        <p class="caption"><b><< AQUI VA LA ESPECIALIDAD >></b></p> <!-- Gynecology, Health Care &amp; Obstetrics -->
                    </div>
                    <div class="panel-body">
                        <ul class="list-unstyled">
                            <li class="row">
                                <span class="col-sm-4 col-xs-12"><b><< AQUI VA LA ESPECIALIDAD >></b> </span>
                                <span class="col-sm-8 col-xs-12"><b><< AQUI VA LA SUB ESPECIALIDAD >></b></span>
                            </li>
                            <li class="row">
                                <span class="col-sm-4 col-xs-12"><b><< MAS DETALLES (eg: EDUCACION) >></b></span>
                                <span class="col-sm-8 col-xs-12"><b><< MAS DETALLES (eg: TITULO DE LA U) >></b></span>
                            </li>
                            <li class="row">
                                <span class="col-sm-4 col-xs-12"><b>Dias de trabajo:</b></span>
                                <span class="col-sm-8 col-xs-12"><b>{{ medico.usi_dias_trabajo }}</b></span>
                            </li>
                        </ul>
                    </div>
                    <div class="panel-footer text-center-md text-center-sm text-center-xs">
                        <div class="row">
                            <div class="col-lg-6 col-xs-12">
                                <ul class="list-unstyled list-inline sm-links">
                                    <li><a href="{{ medico.usi_twitter }}"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="{{ medico.usi_fb }}"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="{{ medico.usi_correo }}"><i class="fa fa-skype"></i></a></li>
                                </ul>
                            </div>
                            <div class="col-lg-6 col-xs-12">
                                <a href="#" class="btn btn-secondary text-uppercase">Book An Appointment</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-7 col-xs-12">
            <div class="profile-details">
                <h3 class="main-heading2">{{ medico.usu_titulo}} {{ medico.usu_nombre|title }}</h3>
                <h4>{{ medico.cli_nombre }}</h4>
                <h5>June 2006 to July 2020</h5>
                <p>
                    {{ medico.usi_info_perfil }}
                </p>
            </div>
        </div>
    </div>
    <!-- Doctor Profile Ends -->

{% endblock %}