{% extends "Layout/base_emr/_clients_base.location.html.twig" %}

{% block title_page %}
    Soporte al usuario
{% endblock %}

{% block body %}
    {{ include('SupportBundle::_menu.html.twig') }}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Crear caso de soporte</h3>
        </div>
        <div class="panel-body">
            <form action="{{ path('support_homepage_crear') }}" method="post" class="form-horizontal">
                <div class="form-group">
                    <label for="soporte_asunto" class="col-sm-1 control-label">Asunto</label>
                    <div class="col-sm-11">
                        <input type="text" class="form-control" id="soporte_asunto" name="soporte_asunto" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="soporte_tema" class="col-sm-1 control-label">Tema</label>
                    <div class="col-sm-11">
                        <select id="soporte_tema" name="soporte_tema" class="form-control">
                            <option>Seleccione un tema...</option>
                            {% for tema in temas %}
                                <option value="{{ tema.id }}">{{ tema.tema }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <label class="col-xs-12" for="soporte_descripcion">Descripci√≥n del problema, consulta o solicitud de funcionalidad</label>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <textarea class="form-control" id="soporte_descripcion" name="soporte_descripcion" rows="10"></textarea>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-sm-12">
                        <button name="guardarCaso" class="btn btn-primary">Crear caso</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
