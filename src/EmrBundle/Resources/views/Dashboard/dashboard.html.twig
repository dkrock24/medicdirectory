                                {     
                                    switch(data[i]['age_estado'])
                                    {
                                        case "p":
                                            status += "Pendiente";
                                            break;
                                        case "a":
                                            status += "Anulada";
                                            break;
                                        case "c":
                                            status += "En curso";
                                            break;
                                        case "t":
                                            status += "Finalizada";
                                            break;   
                                    }
                                }
                                {# 
                                     p=pendiente, a=anulada, c=curso, t=terminada
                                #}
 
