                                        break;
                                    default:
                                        eventType = "Otros";
                                }
                                btn_group += eventType;
                                btn_group += "</div>";
                                btn_group += "</div>";
                                
                                            
                                table += "<tr>";
                                table += "<td>"+btn_group+"</td>";
                                table += "<td><span class='text-muted text-size-small'>"+data[i]['start']+"</span></td>";
                                
                                var status = "";
                                status += "<h6 class='text-semibold no-margin'>";
