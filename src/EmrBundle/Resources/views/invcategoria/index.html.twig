{% extends "Layout/base_emr/_clients_base.html.twig" %}

{% block title_page %}
        EMR || Listado de Categorias Inventario
{% endblock %}

{% block breadcrumb %}
    {{ include('EmrBundle:Dashboard:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('EmrBundle:Dashboard:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Lista Categoria Inventario</h1>

    <!-- Check the notifications -->
    <div id="holder_msg">
        {% for message in app.session.flashbag().get("success") %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{message}}</div>
        {% endfor %}
        {% for message in app.session.flashbag().get("error") %}
            <div class="alert alert-danger"><i class="fa fa-close"></i> {{message}}</div>
        {% endfor %}
    </div>
    <!-- End notifications -->

    {% if invCategorias|length > 0%}
        <table class="table table-striped datatable-reorder">
        <thead>
            <tr>
                <th>Icaid</th>
                <th>Icacategoria</th>
                <th>Icadescripcion</th>
                <th>Icafechacrea</th>
                <th>Icafechamod</th>
                <th>Icaactivo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invCategorium in invCategorias %}
            <tr>
                <td><a href="{{ path('invcategoria_show', { 'icaId': invCategorium.icaId }) }}">{{ invCategorium.icaId }}</a></td>
                <td>{{ invCategorium.icaCategoria }}</td>
                <td>{{ invCategorium.icaDescripcion }}</td>
                <td>{% if invCategorium.icaFechaCrea %}{{ invCategorium.icaFechaCrea|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if invCategorium.icaFechaMod %}{{ invCategorium.icaFechaMod|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if invCategorium.icaActivo %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('invcategoria_show', { 'icaId': invCategorium.icaId }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('invcategoria_edit', { 'icaId': invCategorium.icaId }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="alert alert-info" role=""><i class="fa fa-info-circle"></i> No hay reg√≠stros creados</div>
    {% endif %}    
    <ul class="list-inline">
        <li>
            <a href="{{ path('invcategoria_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Nuevo</a>
        </li>
    </ul>
{% endblock %}

{% block codejs %}
    <script>
        $(document).on("ready",function(){
           // alert();
        });
    </script>
{% endblock %}  
