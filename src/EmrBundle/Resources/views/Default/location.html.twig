{% block body %}    
    <div class="panel panel-white">
        <div class="panel-heading">
            <h6 class="panel-title"><i class="fa fa-hospital-o"></i> Listado de sucursales</h6>
            
        </div>
        <div class="panel-body">
            <!-- Check the notifications -->
            <div id="holder_msg">
                {% for message in app.session.flashbag().get("success") %}
                    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{message}}</div>
                {% endfor %}
                {% for message in app.session.flashbag().get("error") %}
                    <div class="alert alert-danger"><i class="fa fa-close"></i> {{message}}</div>
                {% endfor %}
            </div>

            <div class="row">
                {% for reg in data   %}

                    <div class="col-lg-4 col-md-3 col-sm-6">
                        <div class="panel panel-warning">
                            <div class="panel-heading"> {{ reg.cliUsuCli.cliNombre }}</div>
                            <div class="panel-body">
                              Localizado en: <i class="glyphicon glyphicon-map-marker"></i> {{ reg.cliUsuCli.cliMun.munNombre }}
                              <hr>
                              <a href="{{ path('emr_homepage',{'id':reg.cliUsuCli.cliId} ) }}" class="btn btn-success"><i class="glyphicon glyphicon-cog"></i> Administrar</a>
                              <a href="#" class="btn btn-danger"><i class="glyphicon glyphicon-remove-sign"></i> Dar de baja</a>
                            </div>
                         </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div> 

    
    
  

