{% extends "Layout/base_emr/_clients_base.html.twig" %}

{% block title_page %}
        EMR || Listado de Pacientes
{% endblock %}

{% block breadcrumb %}
    {{ include('EmrBundle:Dashboard:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('EmrBundle:Dashboard:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Listado de pacientes</h1>
    
    <!-- Check the notifications -->
    <div id="holder_msg">
        {% for message in app.session.flashbag().get("success") %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{message}}</div>
        {% endfor %}
        {% for message in app.session.flashbag().get("error") %}
            <div class="alert alert-danger"><i class="fa fa-close"></i> {{message}}</div>
        {% endfor %}
    </div>
    <!-- End notifications -->
    {% if pacientes|length > 0%}
        <table class="table table-striped datatable-reorder">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Genero</th>
                    <th>Email</th>
                    <th>DUI</th>
                    <th>Fecha creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for paciente in pacientes %}
                <tr>
                    <td><a href="{{ path('paciente_show', { 'id': paciente.pacId }) }}">{{ paciente.pacId }}</a></td>
                    <td>{{ paciente.pacNombre }} {{ paciente.pacSegNombre }} {{ paciente.pacApellido }} {{ paciente.pacSegApellido }}</td>
                    <td>{{ paciente.pacGenero }}</td>
                    <td>{{ paciente.pacEmail }}</td>
                    <td>{{ paciente.pacDui }}</td>
                    <td>{% if paciente.pacFechaCrea %}{{ paciente.pacFechaCrea|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('paciente_show', { 'id': paciente.pacId }) }}" class="btn btn-default"><i class="fa fa-folder-open"></i> Ver</a>
                            </li>
                            <li>
                                <a href="{{ path('paciente_edit', { 'id': paciente.pacId }) }}" class="btn bg-teal-400"><i class="fa fa-edit"></i> Editar</a>
                            </li>
                            {#
                            <li>
                                <button value="{{ pai.pacId }}" class="btn btn-danger delete"><i class="fa fa-remove"></i> Eliminar</button>
                            </li>#}
                        </ul>    
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info" role=""><i class="fa fa-info-circle"></i> No hay regístros creados</div>
    {% endif %}    
    <ul class="list-inline">
        <li>
            <a href="{{ path('paciente_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Nuevo</a>
        </li>
    </ul>
        
    

{% endblock %}

{% block codejs %}
    <script>
        $(document).on("ready",function(){
           // alert();
        });
    </script>
{% endblock %}    
