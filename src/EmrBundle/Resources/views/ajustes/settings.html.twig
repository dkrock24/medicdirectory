                                                                        <option value="{{ doctor.cliUsuUsu.usuId }}">
                                                                            {{ doctor.cliUsuTitulo }} 
                                                                            {{ doctor.cliUsuUsu.usuNombre|capitalize~" "~doctor.cliUsuUsu.usuSegundoNombre|capitalize~" "~doctor.cliUsuUsu.usuTercerNombre|capitalize~" "~doctor.cliUsuUsu.usuPrimerApellido|capitalize~" "~doctor.cliUsuUsu.usuSegundoApellido|capitalize }}
                                                                        </option>
                                                                    {% endfor %}
                                                            </select>
                                                            <br><br>
                                                        </fieldset>
                                                    {% endif %}
                                                    <fieldset>
                                                        <legend class="text-semibold">
                                                            Formato de recetas en PDF
                                                        </legend>
                                                        <div class="marginB15">

                                                            <label class="radio-inline">
                                                                <input type="radio" class="styled checkDateApp" name="downPresDate"  value="1">
                                                                Con fecha actual
                                                            </label>

                                                            <label class="radio-inline">
                                                                <input type="radio" class="styled checkDateApp" name="downPresDate" checked="checked" value="0">
                                                                Sin fecha
                                                            </label>
                                                        </div>
                                                        <a href="{{ path('consulta_print_prescription') }}" target="_blank" class="btn btn-success" id="btnViewPrescription">
                                                            <i class="fa fa-download" aria-hidden="true"></i> Descargar Aquí
                                                        </a>
                                                    </fieldset>    
                                                    <br>

                                                </div>
                                            </div>
                                        </div>    
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <button type="submit" class="btn btn-primary btn-sm" name="btnSave" id="btnSave"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar Ajustes</button>
                                    </div>
                                </div>
                            <form>                            
                        </div>



                </div>
            </div>
                                                    
                                                
                                                    
    </div>

    {% endblock %}

    {% block codejs %}
        <script>
            $(document).on("ready", function () {
                
                $("#btnSave").on("click",function(){
                    $("#holder_loading").show();
                });
                
                    {% if settings.minutos_por_evento is defined %}
                            $("#calMinutes").val("{{settings.minutos_por_evento}}");
                    {% endif %}        
                    
                    {% if userRoles.3 is defined %}
                           // $("#btnViewPrescription").hide();
                            $("#doctorsList").change(function(){
                                var id = $(this).val();
                                if(id > 0 )
                                {
                                    $("#btnViewPrescription").show();
                                    
                                    var value =  $('input:radio[name=downPresDate]:checked').val();
                                    setLink(value);
                                } else{
                                    $("#btnViewPrescription").hide();
                                }  
                            });
                    {% endif  %}
                    
                    $(".checkDateApp").change(function(){
                        var value =  $(this).val();
                        //console.log(value);
                        
                        
                        setLink(value);
                    });
                    
                    function setLink(value)
                    {
                        var btnPDF = $("#btnViewPrescription");
                        var currentLink = "{{ path('consulta_print_prescription') }}";
                        var doctorId = $("#doctorsList").val();
                        if( value == 1 )
                        {
                            {% if userRoles.3 is defined %}
                                var newLik = currentLink+"?d="+doctorId+"&date=hoy";
                            {% else %}
                                var newLik = currentLink+"?date=hoy";
                            {% endif %}    
                            
                        }
                        else
                        {
                             {% if userRoles.3 is defined %}
                                 var newLik = currentLink+"?d="+doctorId;   
                            {% else %}
                                var newLik = currentLink;
                            {% endif %} 
                            
                        }
                        
                        btnPDF.attr("href",newLik);
                    }
                    
                    if( $("#doctorsList").size() > 0 )
                    {
                        $("#btnViewPrescription").on("click", function(event){
                            var id = $("#doctorsList").val();
                            if( id > 0)
                            {

