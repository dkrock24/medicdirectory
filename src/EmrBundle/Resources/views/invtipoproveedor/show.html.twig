{% extends "Layout/base_emr/_clients_base.html.twig" %}

{% block title_page %}
        EMR || Datos del Tipo de Proveedor
{% endblock %}

{% block breadcrumb %}
    {{ include('EmrBundle:InvArea:_breadcrumb.html.twig' )  }}
{% endblock %} 

{% block submenutop %}
    {{ include('EmrBundle:InvArea:_submenu.html.twig' )  }}
{% endblock %} 

{% block body %}
    <h1>Tipo de Proveedor</h1>

    <!-- Check the notifications -->
    {% for message in app.session.flashbag().get("success") %}
        <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{message}}</div>
    {% endfor %}
    {% for message in app.session.flashbag().get("error") %}
        <div class="alert alert-danger"><i class="fa fa-close"></i> {{message}}</div>
    {% endfor %}
    <!-- End notifications -->

     <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invTipoProveedor.itprId }}</td>
            </tr>
            <tr>
                <th>Nombre Tipo</th>
                <td>{{ invTipoProveedor.itprTipo }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ invTipoProveedor.itprDescripcion }}</td>
            </tr>
            <tr>
                <th>Creación</th>
                <td>{% if invTipoProveedor.itprFechaCrea %}{{ invTipoProveedor.itprFechaCrea|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modificación</th>
                <td>{% if invTipoProveedor.itprFechaMod %}{{ invTipoProveedor.itprFechaMod|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if invTipoProveedor.itprActivo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('invtipoproveedor_index') }}" class="btn btn-info"><i class="fa fa-list"></i> Listar</a>
        </li>
        <li>
            <a href="{{ path('invtipoproveedor_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Nuevo</a>
        </li>
        <li>
            <a href="{{ path('invtipoproveedor_edit', { 'itprId': invTipoProveedor.itprId }) }}"  class="btn bg-teal-400"><i class="fa fa-edit"></i> Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Eliminar</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
