                                          <option value="12">12:00 PM</option>
                                          <option value="13">01:00 PM</option>
                                          <option value="14">02:00 PM</option>
                                          <option value="15">03:00 PM</option>
                                          <option value="16">04:00 PM</option>
                                          <option value="17">05:00 PM</option>
                                          <option value="18">06:00 PM</option>
                                          <option value="19">07:00 PM</option>
                                          <option value="20">08:00 PM</option>
                                          <option value="21">09:00 PM</option>
                                          <option value="22">10:00 PM</option>
                                          <option value="23">11:00 PM</option>
                                      </select>
                                  </label>
                              </div>
                              <div class="form-group" style="margin-left: 0px;">
                                  <label> 
                                      <select class="form-control" id="minutesEnd">
                                        <option value="00">00</option>
                                        <option value="00">30</option>
                                      </select>
                                  </label>
                              </div>
                    </div>
                    <br>
                    
                  </div>
                  <br>
                  <div class="col-lg-5x">
                    <div id="result_appointment">
                      No se ha validado aún la disponibilidad
                    </div>
                </div>
                  {# <div><button class="btn btn-success">Validar disponibilidad</button></div> #}
                  <input type="hidden" id="dateSelected" value="">
                  <input type="hidden" id="is_available" value="0">
              </div>
              
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-success"><i class="fa fa-calendar" aria-hidden="true"></i> Crear Cita</button>
      </div>
    </div>
  </div>
</div>
